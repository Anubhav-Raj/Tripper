<link href="/css/login.css" rel="stylesheet" type="text/css" />
<body class="login-page">
  <div class="login-box">
    <h2 class="heading-login-box">Sign up</h2>
    <form action="/guide-register" method="post">
      <div class="user-box">
        <input class="user-box-input" name="gname" type="text" required />
        <label class="user-box-label">Name</label>
      </div>
      <div class="user-box">
        <input class="user-box-input" name="gemail" type="email" required />
        <label class="user-box-label">Email</label>
      </div>
      <div class="user-box">
        <input class="user-box-input" name="phone" type="text" required />
        <label class="user-box-label">Mobile</label>
      </div>
      <div class="user-box">
        <input class="user-box-input" name="gpass" type="text" required />
        <label class="user-box-label">password</label>
      </div>

      <div class="signin">
        Already used Tripper?
        <a href="/guide-login" class="">Sign In</a>
      </div>
      <button type="submit" class="login-box-button">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        Submit
      </button>
    </form>
  </div>
</body>
