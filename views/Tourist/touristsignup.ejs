<link href="/css/login.css" rel="stylesheet" type="text/css" />
<body class="login-page">
  <div style="display: flex">
    <div class="img" style="margin: 99px">
      <img src="./img/logo.png" alt="" />
    </div>
    <div class="login-box">
      <h2 class="heading-login-box">Tourist Sign-Up Panel</h2>
      <form>
        <div class="user-box">
          <input class="user-box-input" type="text" required />
          <label class="user-box-label">Name</label>
        </div>
        <div class="user-box">
          <input class="user-box-input" type="email" required />
          <label class="user-box-label">E mail</label>
        </div>
        <div class="user-box">
          <input class="user-box-input" type="phone" required />
          <label class="user-box-label">Phone no</label>
        </div>
        <div class="user-box">
          <input class="user-box-input" type="password" required />
          <label class="user-box-label">Password</label>
        </div>
        <div class="signin">
          New to Tripper?
          <a href="/signup" class="">Sign Up</a>
        </div>

        <a type="submit" class="login-box-button" href="#"> Submit </a>
      </form>
    </div>
  </div>
</body>
