<link href="/css/login.css" rel="stylesheet" type="text/css" />
<body class="login-page">
  <div style="display: flex">
    <div class="img" style="margin: 99px">
      <img src="./img/logo.png" alt="" />
    </div>
    <div class="login-box">
      <h2 class="heading-login-box">Tourist Sign-Up Panel</h2>
      <form action="tourist-signup" method="post">
        <div class="user-box">
          <input class="user-box-input" name="tname" type="text" required />
          <label class="user-box-label">Name</label>
        </div>
        <div class="user-box">
          <input class="user-box-input" name="temail" type="email" required />
          <label class="user-box-label">E mail</label>
        </div>
        <div class="user-box">
          <input class="user-box-input" name="phone" type="phone" required />
          <label class="user-box-label">Phone no</label>
        </div>
        <div class="user-box">
          <input
            class="user-box-input"
            name="tpassc"
            type="password"
            required
          />
          <label class="user-box-label">Password</label>
        </div>
        <div class="signin">
          Already at Tripper?
          <a href="/tourist-login" class="">Sign Up</a>
        </div>

        <button type="submit" class="login-box-button">Submit</button>
      </form>
    </div>
  </div>
</body>
