<link href="/css/login.css" rel="stylesheet" type="text/css" />
<body class="login-page">
  <div style="display: flex">
    <div class="img" style="margin: 99px">
      <img src="./img/logo.png" alt="" />
    </div>
    <div class="login-box">
      <h2 class="heading-login-box">Guide Login Panel</h2>
      <form action="/guide-login" method="post">
        <div class="user-box">
          <input class="user-box-input" name="email" type="text" required />
          <label class="user-box-label">Email</label>
        </div>
        <div class="user-box">
          <input class="user-box-input" name="pass" type="password" required />
          <label class="user-box-label">Password</label>
        </div>
        <div class="signin">
          New to Tripper?
          <a href="/guide-register" class="">Sign Up</a>
        </div>

        <button type="submit" class="login-box-button">Submit</button>
      </form>
    </div>
  </div>
</body>
